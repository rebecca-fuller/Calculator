<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_marginTop="40dp"
    android:layout_marginBottom="10dp"
    >

    <TextView
        android:id="@+id/math_TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="30sp"/>

    <LinearLayout
        android:id="@+id/rowOne"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_below="@id/math_TextView"
        android:layout_marginTop="63dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_weight="1"
            android:text="@string/seven"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/eight_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_weight="1"
            android:text="@string/eight"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/nine_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_weight="1"
            android:text="@string/nine"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/add_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-5dp"
            android:layout_weight="1"
            android:text="@string/plus"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowTwo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/rowOne">

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/four_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/four"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/five_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/five"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/six_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/six"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/minus_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textSize="24sp"
            android:textStyle="bold"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowThree"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/rowTwo">

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/one_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/one"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/two_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/two"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            style="@style/Widget.AppCompat.ButtonBar"
            android:id="@+id/three_Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/three"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/div_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/division"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowFour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowThree"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/zero"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/decimal_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/decimal"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/multi_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/multi"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/rowFive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rowFour"
        android:orientation="horizontal">

        <Button
            android:id="@+id/enter_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/enter"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/clear_Button"
            style="@style/Widget.AppCompat.ButtonBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="24sp"
            android:textStyle="bold"/>
    </LinearLayout>


</RelativeLayout>